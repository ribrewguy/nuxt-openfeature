  "version": "0.1.0",
  "private": false,
  "type": "module",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/module.mjs",
  "types": "./dist/module.d.ts",
